@model Domain.Models.StockItem

@{
    ViewData["Title"] = "Details";
}

<div style="display:flex; justify-content:center; align-items: center;">
    <div style="text-align: center; box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.15); border-radius: 10px; padding: 20px; margin: 20px auto; width: 50%;">
        <br>
        <h2>@Html.DisplayFor(model => model.StockProduct.ProductName)</h2>
        <br>
        <h2>@Html.DisplayFor(model => model.StockStore.StoreName)</h2>
        <br>
        <h5>Valor de compra: @Html.DisplayFor(model => model.QTY)</h5>
        <br>
        <div style="margin-top: 20px;">
            @Html.ActionLink("Editar", "Edit", new { id = Model.StockId }, new { @class = "bi bi-pencil-square btn btn-outline-warning" }) |
            @Html.ActionLink("Voltar", "Index", "StockItems", null, new { @class = "btn btn-outline-primary" })
        </div>
    </div>
</div>
