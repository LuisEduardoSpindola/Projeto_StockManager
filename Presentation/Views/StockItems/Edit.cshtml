@model Domain.Models.StockItem

@{
    ViewData["Title"] = "Edit";
}

<h4>Editar itens em estoque</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StockId" />
            <div class="form-group">
                <label asp-for="StockProductId" class="control-label"></label>
                <select asp-for="StockProductId" class="form-control" asp-items="ViewBag.StockProductId"></select>
                <span asp-validation-for="StockProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StockStoreId" class="control-label"></label>
                <select asp-for="StockStoreId" class="form-control" asp-items="ViewBag.StockStoreId"></select>
                <span asp-validation-for="StockStoreId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QTY" class="control-label"></label>
                <input asp-for="QTY" class="form-control" />
                <span asp-validation-for="QTY" class="text-danger"></span>
            </div>
            <br></br>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-outline-primary" /> | <a asp-action="Index" class="bi bi-skip-backward-fill btn btn-outline-primary"> Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
