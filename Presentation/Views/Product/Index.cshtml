@model IEnumerable<Domain.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between align-items-center">
    <h3>Produtos</h3>
    <form asp-action="Index" asp-controller="Product" method="get" class="d-flex">
        <input type="text" name="name" class="form-control me-2" placeholder="Buscar produto..." />
        <button type="submit" class="btn btn-outline-primary">Buscar</button>
    </form>

    <a asp-action="Create" class="bi bi-plus-circle btn btn-outline-primary"> Adicionar</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>@Html.DisplayNameFor(model => model.ProductName)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.BuyValue)</th>
            <th>@Html.DisplayNameFor(model => model.SellValue)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@Html.DisplayFor(modelItem => item.Img)" width="70" height="70">
                </td>
                <td style="vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td style="vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td style="vertical-align: middle;">
                    R$ @Html.DisplayFor(modelItem => item.BuyValue)
                </td>
                <td style="vertical-align: middle;">
                    R$ @Html.DisplayFor(modelItem => item.SellValue)
                </td>
                <td style="vertical-align: middle;">
                    @Html.ActionLink("Editar", "Edit", new { id = item.ProductId }, new { @class = "bi bi-pencil-square btn btn-outline-warning" }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.ProductId }, new { @class = "bi bi-eye-fill btn btn-outline-primary" }) |
                    @Html.ActionLink("Deletar", "Delete", new { id = item.ProductId }, new { @class = "bi bi-trash btn btn-outline-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>

